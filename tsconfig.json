{
  "compilerOptions": {
    "target": "ES2015",        // or higher, like ES2019
    "module": "CommonJS",
    "lib": ["ES2019", "DOM"],  // Include modern JS features
    "declaration": true,       // Generate .d.ts files
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,      // Add this to skip checking node_modules
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
